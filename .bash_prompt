# ~/.bash_prompt: executed by .bashrc

MINT="\033[38;5;121m"
PINK="\033[38;5;205m"
GREY="\033[38;5;248m"
RESET="\033[0m"

parse_git_dirty () {
  [[ $(git status 2> /dev/null | tail -n1) != "nothing to commit
(working directory clean)" ]] && echo "*"
}
parse_git_branch () {
  git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e "s/*\(.*\)/\1$(parse_git_dirty)/"
}

PS1="\[$MINT\]\w\[$GREY\]\$([[ -n \$(git branch 2> /dev/null) ]] && echo \" |\")\[$PINK\]\$(parse_git_branch)\[$GREY\]\n$ \[$RESET\]"
